@model PaperwoffNet.Infrastructure.Factura

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFactura" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TutoresIdTutores" class="control-label"></label>
                <select asp-for="TutoresIdTutores" class="form-control" asp-items="ViewBag.TutoresIdTutores"></select>
                <span asp-validation-for="TutoresIdTutores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncioPeriodo" class="control-label"></label>
                <input asp-for="IncioPeriodo" class="form-control" />
                <span asp-validation-for="IncioPeriodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinPeriodo" class="control-label"></label>
                <input asp-for="FinPeriodo" class="form-control" />
                <span asp-validation-for="FinPeriodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalHoras" class="control-label"></label>
                <input asp-for="TotalHoras" class="form-control" />
                <span asp-validation-for="TotalHoras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
