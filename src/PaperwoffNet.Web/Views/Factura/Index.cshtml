@model IEnumerable<PaperwoffNet.Infrastructure.Factura>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped projects dt-responsive nowrap">
    <thead>
        <tr role="row">
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncioPeriodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinPeriodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHoras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TutoresIdTutoresNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncioPeriodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinPeriodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHoras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TutoresIdTutoresNavigation.UsersIdUserNavigation.Nombre)&nbsp;
                @Html.DisplayFor(modelItem => item.TutoresIdTutoresNavigation.IdTutores)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFactura" class="btn btn-outline-primary btn-sm">
                    <i class="fa fa-paw"></i>
                    Edit
                </a>
                <a asp-action="Details" asp-route-id="@item.IdFactura" class="btn btn-info btn-sm">
                    <i class="fa fa-circle"></i>
                    Details
                </a>
                <a asp-action="Delete" asp-route-id="@item.IdFactura" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
